<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0" 
			readonly="true"  />

		<field
			name="name"
			type="text"
			label="COM_COLLECTOR_DEFINED_NAME_LABEL"
			description="COM_COLLECTOR_DEFINED_NAME_LABEL_DESC"
			size="40"
			class="inputbox input-xxlarge input-large-text"
			required="true"
		/>
		
		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			class="inputbox" size="45" />
		
		<field name="created" type="calendar" label="COM_COLLECTOR_FIELD_CREATED_LABEL"
			description="COM_COLLECTOR_FIELD_CREATED_DESC" class="inputbox" size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="created_by" type="user"
			label="COM_COLLECTOR_FIELD_CREATED_BY_LABEL" description="COM_COLLECTOR_FIELD_CREATED_BY_DESC" />

		<field name="created_by_alias" type="text"
			label="COM_COLLECTOR_FIELD_CREATED_BY_ALIAS_LABEL" description="COM_COLLECTOR_FIELD_CREATED_BY_ALIAS_DESC"
			class="inputbox" size="20" />

		<field name="modified" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_COLLECTOR_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified_by" type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		 />

		<field name="checked_out" type="hidden" filter="unset" />

		<field name="checked_out_time" type="hidden" filter="unset" />

		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" size="1" />
		
		<field name="width" type="text" label="COM_COLLECTOR_FIELD_WIDTH_LABEL"
			description="COM_COLLECTOR_FIELD_WIDTH_DESC" class="inputbox" size="45" />
		
		<field name="height" type="text" label="COM_COLLECTOR_FIELD_HEIGHT_LABEL"
			description="COM_COLLECTOR_FIELD_HEIGHT_DESC" class="inputbox" size="45" />
	</fieldset>
</form>